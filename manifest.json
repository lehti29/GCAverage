{
    "name": "GCAverage",
    "description": "Calculates average pace from the active laps",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["https://www.connect.garmin.com/modern/activity*"],
          "js": ["content.js"]
        }
      ],
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html"
      }
  }